@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <h1 class="display-4">Test Lab</h1>
    <h4 class="text-danger">@ViewBag.Message</h4>
</div>
@*// Form login*@
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <form method="post" action="/Home">
            <div class="form-group">
                <label for="examcode">Exam Code</label>
                <input type="text" class="form-control" id="examcode" name="examcode" placeholder="Enter examcode">
            </div>
            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" class="form-control" id="username" name="username" placeholder="Enter username">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Password">
            </div>
            @*Centert button*@
            <div class="text-center">
                <button type="submit" class="btn btn-primary mt-3">Do Exam</button>
            </div>
        </form>
    </div>
    <div class="col-md-4">
    </div>
</div>
